#!/bin/bash
# 
# Find and run most recent version of IntelliJ IDEA

# Flavor of IDEA: idea-IC, idea-IU"
FLAVOR="idea-IC"

# Base directory to search in
BASE_DIR="/opt"

latest=$(find /opt -name "idea.sh" -print 2> /dev/null | grep "$FLAVOR" | sort -Vr | head -n 1)
if [ -e "$latest" ]; then
    sh "$latest"
fi
